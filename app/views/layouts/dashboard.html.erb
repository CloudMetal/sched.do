<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Sched.do Stats</title>
    
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700|Open+Sans:400,600,700' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag "dashboard" %>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <%= javascript_include_tag "bootstrap-tab" %>
  </head>
  
  <body class="dashboard">
    <header>
      <h1>Stats.Sched.do</h1>
      <ul>
        <li><%= link_to "Home", root_path %></li>
      </ul>
    </header>

    <nav>
      <ul>
        <li class="active"><%= link_to "Active Users", "#", :role => "user" %></li>
        <li><%= link_to "Polls Created", "#", :role => "menu" %></li>
        <li><%= link_to "Users Invited", "#", :role => "heart" %></li>
        <li><%= link_to "Invitation Funnel", "#", :role => "menu" %></li>
        <li><%= link_to "Yammer User Flow", "#", :role => "menu" %></li>
        <li><%= link_to "Guest Flow", "#", :role => "menu" %></li>
        <li><%= link_to "Invitees to Voters %", "#", :role => "heart" %></li>
      </ul>
    </nav>

    <article>
      <section>
        <%= yield %>
      </section>
    </article>    
  </body>
</html>