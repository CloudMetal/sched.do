      ]);

    var options = {
      hAxis: {title: 'Month', titleTextStyle: {fontName: 'Open Sans', color: '#999999'}},
      colors: ['#217D5B'],
      legendTextStyle: {fontName: 'Open Sans'}
    };

    var chart = new google.visualization.ColumnChart(document.getElementById('mau-all-time'));
    chart.draw(data, options);
  }
</script>

